                  p Галина, спасибо большое за обратную связь! Обязательно передадим Ларисе
                    br
                    b.fs20 С уважением, Администрация

            // Pagination
            +pagination('center')
              +pagination-item('1', '#!', true)
              +pagination-item('2', '#!')
              +pagination-item('3', '')

            .reviews__form
              h2 Ваш отзыв важен для нас
              form(action="#!")
                .row
                  .col-12.col-md-6
                    .form-group
                      +field-text({
                        title: '',
                        hasJs: false,
                        isTextarea: false,
                        hasError: false,
                        helpText: '',
                        mods: '',
                        val: '',
                        attrs: {
                          name: 'review-name',
                          placeholder: 'Ваше имя',
                        }
                      })
                  .col-12.col-md-6
                    .form-group
                      +field-text({
                        title: '',
                        hasJs: false,
                        isTextarea: false,
                        hasError: false,
                        helpText: '',
                        mods: '',
                        val: '',
                        attrs: {
                          name: 'review-email',
                          placeholder: 'Ваше E-mail',
                        }
                      })
                .form-group
                  +field-text({
                    title: '',
                    hasJs: false,
                    isTextarea: true,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'review-comment',
                      placeholder: 'Ваш отзыв',
                      rows: '1'
                    }
                  })
                .clear15
                button(type="button").btn.btn--block Оставить отзыв

    include ./_include/_footer
